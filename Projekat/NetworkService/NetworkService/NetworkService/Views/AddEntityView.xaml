<UserControl x:Class="NetworkService.Views.AddEntityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             xmlns:viewModel="clr-namespace:NetworkService.ViewModel"
             mc:Ignorable="d" d:DesignHeight="727" d:DesignWidth="900">

    <UserControl.DataContext>
        <viewModel:AddEntityViewModel/>
    </UserControl.DataContext>

    <Border Padding="10" Background="White">

        <StackPanel Orientation="Vertical" VerticalAlignment="Center">

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Entity ID: " FontFamily="Courier New" FontWeight="DemiBold" FontSize="30"/>
                <TextBox Text="{Binding EntityId, Mode=OneWay}" FontFamily="Courier New" FontSize="25" Height="30" Width="626" HorizontalAlignment="Stretch" VerticalAlignment="Center" IsReadOnly="True" IsEnabled="False" ToolTip="IDs are auto-increment and must be unique" Margin="36 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock Text="Entity name: " FontFamily="Courier New" FontWeight="DemiBold" FontSize="30"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, 
                        Mode=TwoWay}" FontFamily="Courier New" FontSize="25" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"
             Width="626" ToolTip="Enter name of the entity"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock Text="Entity type: " FontFamily="Courier New" FontWeight="DemiBold" FontSize="30"/>
                <ComboBox FontFamily="Courier New" FontSize="23" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="626" ToolTip="Select type of your new entity" SelectedIndex="{Binding SelectedTypeIndex}">
                    <ComboBoxItem Content="Types..."/>
                    <ComboBoxItem Content="CableSensor"/>
                    <ComboBoxItem Content="DigitalManometer"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock Text="Last value: " FontFamily="Courier New" FontWeight="DemiBold" FontSize="30"/>
                <TextBox Text="{Binding LastValue, UpdateSourceTrigger=PropertyChanged, 
                        Mode=TwoWay}" FontFamily="Courier New" FontSize="25" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"  Width="626" ToolTip="Enter the last measured value (in MPa)" Margin="18 0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock Text="Created at: " FontFamily="Courier New" FontWeight="DemiBold" FontSize="30"/>
                <TextBox Text="{Binding CreatedAt, Mode=OneWay}" FontFamily="Courier New" FontSize="25" Height="30" Width="626" HorizontalAlignment="Stretch" VerticalAlignment="Center" IsReadOnly="True" IsEnabled="False" ToolTip="Date and Time of creation is automatic" Margin="18 0"/>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
