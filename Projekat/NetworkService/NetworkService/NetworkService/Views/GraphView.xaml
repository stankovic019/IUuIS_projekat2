<UserControl x:Class="NetworkService.Views.GraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkService.Views"
             xmlns:viewModel="clr-namespace:NetworkService.ViewModel"
             xmlns:model="clr-namespace:NetworkService.Model"
             mc:Ignorable="d" 
             d:DesignHeight="727" d:DesignWidth="1000">

    <UserControl.DataContext>
        <viewModel:GraphViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    

    <Border Padding="10">

        <Grid Grid.IsSharedSizeScope="True">

            <Grid.RowDefinitions>
                <RowDefinition Height="2.5*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.08*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ComboBox Grid.Row="0" FontFamily="Courier New" FontSize="25" Margin="0 0 0 5" FontWeight="DemiBold" ItemsSource="{Binding Valves}" SelectedItem="{Binding SelectedValve, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Grid Grid.Row="1">
                    <Border BorderBrush="Gray" BorderThickness="2" Background="White">
                        <!-- Canvas for drawing the graph -->
                        <Canvas Name="GraphCanvas" Background="White" Margin="40 20">
                            <!-- X-axis line -->
                            <Line X1="0" Y1="{Binding CanvasHeight}" X2="{Binding CanvasWidth}" Y2="{Binding CanvasHeight}" 
                                  Stroke="Black" StrokeThickness="2"/>

                            <!-- Graph dots and lines will be drawn here through ItemsControl -->
                            <ItemsControl ItemsSource="{Binding GraphPoints}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Each graph point consists of a line (if not first point) and a dot -->
                                        <Canvas>
                                            <!-- Connecting line to previous point -->
                                            <Line X1="{Binding PreviousX}" Y1="{Binding PreviousY}" 
                                                  X2="{Binding X}" Y2="{Binding Y}" 
                                                  Stroke="DarkGray" StrokeThickness="2"
                                                  Visibility="{Binding ShowLine, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                            <!-- Measurement dot -->
                                            <Ellipse Width="50" Height="50" 
                                                     Fill="{Binding DotColor}" 
                                                     Stroke="Black" StrokeThickness="1"
                                                     Canvas.Left="{Binding DotX}" 
                                                     Canvas.Top="{Binding DotY}"/>


                                            <!-- Value text inside the dot -->
                                            <TextBlock Text="{Binding MeasuredValue}" 
                                                       FontSize="20" FontWeight="Bold" 
                                                       Foreground="White"
                                                       Canvas.Left="{Binding TextX}" 
                                                       Canvas.Top="{Binding TextY}"
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>

                                            <!-- Timestamp label on X-axis -->
                                            <TextBlock Text="{Binding TimeStamp}" 
                                                       FontSize="14" FontFamily="Courier New"
                                                       Canvas.Left="{Binding TimeLabelX}" 
                                                       Canvas.Top="{Binding TimeLabelY}"
                                                       HorizontalAlignment="Center"/>
                                        </Canvas>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="0"/>
                                        <Setter Property="Canvas.Top" Value="0"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </Canvas>
                    </Border>


                </Grid>

            </Grid>

            <Grid Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Valve Distribution" FontFamily="Courier New" FontSize="35" FontWeight="DemiBold" VerticalAlignment="Center"/>

                <Grid Grid.Row="1" Margin="0 5 0 0">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="0.4*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="40 15">
                        <ItemsControl ItemsSource="{Binding Rectangles}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="1" Columns="10"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type model:NewRectangle}">
                                    <Rectangle  Fill="{Binding Fill}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>

                    <Grid Grid.Row="1" Margin="40 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="0%" Grid.Column="0" FontFamily="Courier New" />
                        <TextBlock Text="2" Grid.Column="0" FontFamily="Courier New" HorizontalAlignment="Right"/>
                        <TextBlock Text="0%" Grid.Column="1" FontFamily="Courier New" />
                        <TextBlock Text="4" Grid.Column="1" FontFamily="Courier New" HorizontalAlignment="Right"/>
                        <TextBlock Text="0%" Grid.Column="2" FontFamily="Courier New" />
                        <TextBlock Text="6" Grid.Column="2" FontFamily="Courier New" HorizontalAlignment="Right"/>
                        <TextBlock Text="0%" Grid.Column="3" FontFamily="Courier New" />
                        <TextBlock Text="8" Grid.Column="3" FontFamily="Courier New" HorizontalAlignment="Right"/>
                        <TextBlock Text="0%" Grid.Column="4" FontFamily="Courier New" />
                        <TextBlock Text="100%" Grid.Column="4" FontFamily="Courier New" HorizontalAlignment="Right"/>


                    </Grid>

                    <Grid Grid.Row="2" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <Rectangle Fill="{Binding type1Color}" Width="20" Height="20" Margin="0 0 5 0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Type1}" FontFamily="Courier New" HorizontalAlignment="Left" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0 0 10 0"/>
                            <TextBlock Text="{Binding Dist1Str}" FontFamily="Courier New" HorizontalAlignment="Left" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="{Binding Dist2Str}" FontFamily="Courier New" HorizontalAlignment="Left" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Type2}" FontFamily="Courier New" HorizontalAlignment="Left" FontSize="22" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10 0 0 0"/>
                            <Rectangle Fill="{Binding type2Color}" Width="20" Height="20" Margin="5 0 0 0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                </Grid>
                


            </Grid>
        </Grid>
        
        
    </Border>
</UserControl>
